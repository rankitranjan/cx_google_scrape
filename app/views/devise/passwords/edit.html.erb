<h2 class="text-center">Reset Your Password</h2>

<div class="container d-flex justify-content-center">
  <div class="col-md-6">
    <p class="text-center">Enter your new password below.</p>

    <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), method: :put, class: "card p-4 shadow-lg") do |f| %>
      <div class="form-group mb-3">
        <%= f.label :password, "New Password", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", required: true %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Update Password", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <p>Remembered your password? <%= link_to "Sign In", new_session_path(resource_name), class: "text-primary" %></p>
    </div>
  </div>
</div>
