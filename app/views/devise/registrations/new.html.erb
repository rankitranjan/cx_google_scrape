<h2 class="text-center">Sign Up</h2>

<div class="container d-flex justify-content-center">
  <div class="col-md-6">
    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), class: "card p-4 shadow-lg") do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", required: true %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <p>Already have an account? <%= link_to "Sign In", new_session_path(resource_name), class: "text-primary" %></p>
    </div>
  </div>
</div>
